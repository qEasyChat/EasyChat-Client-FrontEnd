<Window x:Class="EasyChat_Client_FrontEnd.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyChat_Client_FrontEnd"
        mc:Ignorable="d"
        Title="ChatWindow" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="763*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="sendMessageBox" HorizontalAlignment="Left" Height="52" Margin="8.666,408,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="628" Grid.Column="1"/>
        <Button x:Name="sendMessageButton" Content="Button" HorizontalAlignment="Left" Height="52" Margin="664.666,408,0,0" VerticalAlignment="Top" Width="89" RenderTransformOrigin="0.443,0.814" Grid.Column="1"/>
        <ScrollViewer HorizontalAlignment="Left" Height="319" Margin="10,84,0,0" VerticalAlignment="Top" Width="774" Grid.ColumnSpan="2">
            <TextBox x:Name="chatBox" Height="287" TextWrapping="Wrap" Text="TextBox" Width="707"/>
        </ScrollViewer>
        <Label x:Name="serverNameLabel" Content="Label" Margin="8.666,10,658.6,0" VerticalAlignment="Top" FontSize="32" Grid.Column="1"/>

    </Grid>
</Window>
